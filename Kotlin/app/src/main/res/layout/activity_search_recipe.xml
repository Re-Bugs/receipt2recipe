<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".page.SearchRecipe">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/searchEditText"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="47dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="651dp"
            android:hint="검색할 레시피를 입력해주세요."
            android:imeOptions="actionDone"
            android:inputType="text" />

        <Button
            android:id="@+id/search_button"
            android:layout_width="38dp"
            android:layout_height="31dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="53dp"
            android:layout_marginBottom="659dp"
            android:background="@drawable/search_24dp_fill0_wght400_grad0_opsz24" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="166dp"
            android:layout_height="57dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="38dp"
            android:layout_marginEnd="207dp"
            android:layout_marginBottom="592dp"
            android:text="레시피 검색"
            android:textSize="32dp"
            android:textStyle="bold" />




        <ListView
            android:id="@+id/listViewRecipes"
            android:layout_width="match_parent"
            android:layout_height="412dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginBottom="100dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/home"
            android:layout_width="52dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="327dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/home_24dp_fill0_wght400_grad0_opsz24"
            android:onClick="transitionToNextActivity"
            app:backgroundTint="@color/black" />

        <Button
            android:id="@+id/search"
            android:layout_width="52dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="96dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/search_24dp_fill0_wght400_grad0_opsz24"
            android:onClick="transitionToNextActivity"
            app:backgroundTint="#7E7E7E" />

        <Button
            android:id="@+id/picture_add"
            android:layout_width="52dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="172dp"
            android:layout_marginBottom="13dp"
            android:background="@drawable/add_a_photo_24dp_fill0_wght400_grad0_opsz24"
            android:onClick="transitionToNextActivity"
            app:backgroundTint="@color/black" />

        <Button
            android:id="@+id/list_item"
            android:layout_width="52dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="253dp"
            android:layout_marginBottom="14dp"
            android:background="@drawable/list_24dp_fill0_wght400_grad0_opsz24"
            android:onClick="transitionToNextActivity"
            app:backgroundTint="@color/black" />

        <Button
            android:id="@+id/recommend"
            android:layout_width="52dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="22dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/recommend_24dp_fill0_wght400_grad0_opsz24"
            android:onClick="transitionToNextActivity"
            app:backgroundTint="@color/black" />







    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>