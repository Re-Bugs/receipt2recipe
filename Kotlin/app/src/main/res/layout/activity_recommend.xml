<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".page.Recommend">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/textView1"
            android:layout_width="166dp"
            android:layout_height="57dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="220dp"
            android:layout_marginBottom="663dp"
            android:text="추천 레시피"
            android:textSize="32dp"
            android:textStyle="bold" />

        <ListView
            android:id="@+id/listViewRecipes"
            android:layout_width="408dp"
            android:layout_height="531dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="125dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <Button
            android:id="@+id/home"
            android:layout_width="52dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="327dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/home_24dp_fill0_wght400_grad0_opsz24"
            app:backgroundTint="@color/black"/>

        <Button
            android:id="@+id/search"
            android:layout_width="52dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="96dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/search_24dp_fill0_wght400_grad0_opsz24"
            app:backgroundTint="@color/black"/>

        <Button
            android:id="@+id/picture_add"
            android:layout_width="52dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="172dp"
            android:layout_marginBottom="13dp"
            android:background="@drawable/add_a_photo_24dp_fill0_wght400_grad0_opsz24"
            app:backgroundTint="@color/black"/>

        <Button
            android:id="@+id/list_item"
            android:layout_width="52dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="253dp"
            android:layout_marginBottom="14dp"
            android:background="@drawable/list_24dp_fill0_wght400_grad0_opsz24"
            app:backgroundTint="@color/black"/>

        <Button
            android:id="@+id/recommend"
            android:layout_width="52dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="22dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/recommend_24dp_fill0_wght400_grad0_opsz24"
            app:backgroundTint="#7E7E7E"/>

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>