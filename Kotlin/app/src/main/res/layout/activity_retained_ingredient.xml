<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".page.RetainedIngredient">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="16dp">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="166dp"
            android:layout_height="57dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="38dp"
            android:layout_marginEnd="207dp"
            android:layout_marginBottom="592dp"
            android:text="보유 재료"
            android:textSize="32dp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/deleteButton"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="94dp"
            android:layout_marginBottom="590dp"
            android:background="@android:color/transparent"
            android:backgroundTint="@color/white"
            android:text="삭제"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <ListView
            android:id="@+id/listView"
            android:layout_width="380dp"
            android:layout_height="503dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="96dp"
            android:padding="16dp" />




        <Button
            android:id="@+id/home"
            android:layout_width="52dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="327dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/home_24dp_fill0_wght400_grad0_opsz24"
            app:backgroundTint="@color/black"/>

        <Button
            android:id="@+id/search"
            android:layout_width="52dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="96dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/search_24dp_fill0_wght400_grad0_opsz24"
            app:backgroundTint="@color/black"/>

        <Button
            android:id="@+id/picture_add"
            android:layout_width="52dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="172dp"
            android:layout_marginBottom="13dp"
            android:background="@drawable/add_a_photo_24dp_fill0_wght400_grad0_opsz24"
            app:backgroundTint="@color/black"/>

        <Button
            android:id="@+id/list_item"
            android:layout_width="52dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="253dp"
            android:layout_marginBottom="14dp"
            android:background="@drawable/list_24dp_fill0_wght400_grad0_opsz24"
            app:backgroundTint="#7E7E7E"/>

        <Button
            android:id="@+id/recommend"
            android:layout_width="52dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="22dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/recommend_24dp_fill0_wght400_grad0_opsz24"
            app:backgroundTint="@color/black"/>


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>