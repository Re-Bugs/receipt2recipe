<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".page.PictureAdd">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="16dp">


        <Button
            android:id="@+id/button_take_photo"
            android:layout_width="136dp"
            android:layout_height="51dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="58dp"
            android:layout_marginBottom="160dp"
            android:text="카메라"
            android:background="@drawable/radius"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button_select_photo"
            android:layout_width="136dp"
            android:layout_height="51dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="218dp"
            android:layout_marginBottom="160dp"
            android:text="갤러리"
            android:background="@drawable/radius"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="296dp"
            android:layout_height="252dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="53dp"
            android:layout_marginBottom="471dp"
            android:contentDescription="Selected image"
            app:layout_constraintBottom_toTopOf="@id/button_upload"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <ListView
            android:id="@+id/listView"
            android:layout_width="347dp"
            android:layout_height="224dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="29dp"
            android:layout_marginBottom="240dp"
            android:choiceMode="multipleChoice"
            app:layout_constraintBottom_toTopOf="@id/button_confirm"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageView" />

        <Button
            android:id="@+id/button_upload"
            android:layout_width="136dp"
            android:layout_height="51dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="217dp"
            android:layout_marginBottom="97dp"
            android:text="사진 업로드"
            android:background="@drawable/radius"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <Button
            android:id="@+id/button_confirm"
            android:layout_width="136dp"
            android:layout_height="51dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="56dp"
            android:layout_marginBottom="95dp"
            android:text="재료 저장"
            android:background="@drawable/radius"
            app:layout_constraintBottom_toTopOf="@id/button_upload"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <Button
            android:id="@+id/home"
            android:layout_width="52dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="327dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/home_24dp_fill0_wght400_grad0_opsz24"
            android:onClick="transitionToNextActivity"
            app:backgroundTint="@color/black" />

        <Button
            android:id="@+id/search"
            android:layout_width="52dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="96dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/search_24dp_fill0_wght400_grad0_opsz24"
            android:onClick="transitionToNextActivity"
            app:backgroundTint="@color/black" />

        <Button
            android:id="@+id/picture_add"
            android:layout_width="52dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="172dp"
            android:layout_marginBottom="13dp"
            android:background="@drawable/add_a_photo_24dp_fill0_wght400_grad0_opsz24"
            android:onClick="transitionToNextActivity"
            app:backgroundTint="#7E7E7E" />

        <Button
            android:id="@+id/list_item"
            android:layout_width="52dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="253dp"
            android:layout_marginBottom="14dp"
            android:background="@drawable/list_24dp_fill0_wght400_grad0_opsz24"
            android:onClick="transitionToNextActivity"
            app:backgroundTint="@color/black" />

        <Button
            android:id="@+id/recommend"
            android:layout_width="52dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="22dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/recommend_24dp_fill0_wght400_grad0_opsz24"
            android:onClick="transitionToNextActivity"
            app:backgroundTint="@color/black" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>